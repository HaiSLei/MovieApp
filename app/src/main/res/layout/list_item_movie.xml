<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/list_item_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="creed" />

    <ImageView
        android:id="@+id/list_item_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/list_item_movie_title"
        app:layout_constraintTop_toBottomOf="@id/list_item_movie_title"
        tools:src="@mipmap/ic_launcher"
        />

    <Button
        android:id="@+id/list_item_movie_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/list_item_movie_title"
        app:layout_constraintTop_toBottomOf="@id/list_item_movie_poster"
        tools:text="Add"/>

</androidx.constraintlayout.widget.ConstraintLayout>